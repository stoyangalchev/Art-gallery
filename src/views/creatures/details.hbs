<main>
    <section id="details-page">
        <h1>Details</h1>
        <article class="details-card">

            <article class="details-card-text">
                <h2>Title:<br> {{creatures.title}}</h2>
                <h3>Author: {{creatures.owner.username}}</h3>
                <h3>Painting technique: {{creatures.technique}}</h3>
                <h3>Certificate of authenticity: {{creatures.certificate}}</h3>

                {{#if isAuthenticated}}
                <!-- If there is no registered user, do not display buttons-->
                <div class="buttons">
                    <!-- Only for registered user and author of the publication -->
                    {{#if isOwner}}
                    <a href="/creatures/{{creatures._id}}/edit" class="btn-edit">Edit</a>
                    <a href="/creatures/{{creatures._id}}/delete" class="btn-delete">Delete</a>
                    {{else}}
                    {{#if isVoted}}
                    <!-- logged in user who has not yet shared the publication-->
                    <p class="shared-pub">You already shared this publication</p>
                    <!-- logged in user who has already shared the publication-->
                    {{else}}

                    <a href="/creatures/{{creatures._id}}/vote" class="btn-share">Share publication</a>
                    {{/if}}
                </div>

                {{/if}}
                {{/if}}
            </article>

            <article class="details-card-image">
                <img src="{{creatures.image}}" alt="art-image2">
            </article>

        </article>
    </section>
</main>