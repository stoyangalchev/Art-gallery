<div class="my-card">
    <div class="card-header">
        <img src="{{image}}" />
    </div>
    <div class="card-body">
        <span class="tag tag-teal">Species: {{species}}</span>
        <h4>
            Name: {{name}}
        </h4>
        <div class="user">
            <div class="user-info">
                <h5>Author: {{owner.firstname}}</h5>
                <small>Rating of votes: {{creatures.voteLength}} </small>
                <a href="/creatures/{{_id}}/details" class="details_btn">Details</a>

            </div>
        </div>
    </div>
</div>